{
  "name": "sudt-cli",
  "version": "0.5.5",
  "description": "This is a command line tool to create SUDT tokens on the Nervos Mainnet and Testnet.",
  "main": "src/index.ts",
  "scripts": {
    "start": "ts-node --files src/index.ts",
    "clean": "rimraf build && rimraf dist",
    "compile": "tsc",
    "package": "nexe -t v14.15.3 -o dist/sudt-cli -r ./node_modules/ build/index.js",
    "package-linux": "nexe -t linux-x64-14.15.3 -o dist/linux-x64/sudt-cli -r ./node_modules/ build/index.js",
    "package-mac": "nexe -t mac-x64-14.15.3 -o dist/mac-x64/sudt-cli -r ./node_modules/ build/index.js",
    "package-windows": "nexe -t windows-x64-14.15.3 -o dist/windows-x64/sudt-cli.exe -r ./node_modules/ build/index.js",
    "build": "npm run clean && npm run compile && npm run package",
    "build-all": "npm run clean && npm run compile && npm run package-linux && npm run package-mac && npm run package-windows",
    "bump": "npm --no-git-tag-version version patch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jordanmack/sudt-cli.git"
  },
  "author": "Jordan Mack <jordan@nervos.org>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jordanmack/sudt-cli/issues"
  },
  "homepage": "https://github.com/jordanmack/sudt-cli#readme",
  "dependencies": {
    "@lay2/pw-core": "^0.4.0-alpha.8",
    "@nervosnetwork/ckb-sdk-utils": "^0.41.1",
    "blake2b": "^2.1.3",
    "ckb-js-toolkit": "^0.10.2",
    "lodash": "^4.17.21",
    "node-fetch": "^2.6.1",
    "yargs": "^17.0.1"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.170",
    "@types/node": "^15.12.4",
    "@types/node-fetch": "^2.5.10",
    "@types/yargs": "^17.0.0",
    "nexe": "^4.0.0-beta.18",
    "nodemon": "^2.0.7",
    "rimraf": "^3.0.2",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.4"
  }
}
